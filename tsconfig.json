{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["dom", "es2022"],
    "module": "CommonJS",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "outDir": "./dist",
    "strict": true,
    "noImplicitAny": true,
    "strictFunctionTypes": true,
    "skipLibCheck": true
  },
  "exclude": [
    "*.config.ts",
    "./dist"
  ],
  "paths": {
    "*": ["*.d.ts"]
  }
}
